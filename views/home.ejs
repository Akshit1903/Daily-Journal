<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= startingContent %></p>
<% homePosts.forEach(function(post){ %>
<h1><%= post.title %></h1>
<% if(post.content.length >100){ %>
<p>
  <%= post.content.substring(0,100) + "... " %><a
    href="/posts/<%= post.title %>"
    >Read more</a
  >
</p>
<% }else{ %>
<p><%= post.content %></p>
<% } %> <% }); %>
<a href="/compose" class="btn btn-primary m-3">Compose</a>
<%- include("partials/footer"); -%>
