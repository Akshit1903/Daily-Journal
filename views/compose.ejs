<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="posttitle" class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle" id="posttitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="postId" class="form-label">Post</label>
    <textarea name="postBody" id="postId" class="form-control" rows=5 cols=30></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>
